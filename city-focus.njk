       <div class="column is-4 has-text-white" id="day and location">
         <section>
           <div class="box has-text-right  mt-6 has-background-info">
            <p class="title is-1 is-family-code has-text-white"> <span id="currentCity"></span></p>
            <p class="subtitle is-3 is-family-code has-text-white"><span id="day"></span></p>
           </div>
         </section>
       </div>
         <div class="column is-5" id="current time and forecast">
           <section>
             <div class="box has-background-info mt-6 mr-6">
