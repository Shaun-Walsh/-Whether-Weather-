              <div class="columns is-mobile">
                <div class="column">
                  <p class="bd-notification has-text-centered subtitle is-2 is-family-code has-text-white" id="tempNow"></p>
                </div>
                  <div class="column">
                    <p class="bd-notification has-text-centered subtitle is-2 is-family-code has-text-white" id="windNow"></p>
                  </div>
              </div>
           </section>
         </div>        
   </header>
   <main class="columns is-centered has-background-info">
     <div class="column is-3 mt-6" id="weather image today">
  	   <section>
